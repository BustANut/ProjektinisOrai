BoxLayout1:
    orientation: "vertical"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/weather.jpg'
    Label:
        id: my_label
        text: "-"
        size_hint: 1, None
        height: "50dp"
        color: 0, 0, 0, .65
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "55dp"
    Label:
        id: temperature
        text: "-"
        size_hint: 1, None
        height: "180dp"
        color: 1, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "80dp"
    Label:
        id: weather_type
        text: "-"
        size_hint: 1, None
        height: "35dp"
        color: 0, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "15dp"
    Label:
        id: pressure
        text: "-"
        size_hint: 1, None
        height: "35dp"
        color: 0, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "15dp"
    Label:
        id: humidity
        text: "-"
        size_hint: 1, None
        height: "35dp"
        color: 0, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "15dp"
    Label:
        id: feels_like
        text: "-"
        size_hint: 1 , None
        height: "35dp"
        color: 0, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "15dp"
    Label:
        text: "Įvesti miesto pavadinimą\n                      ↓(žemiau)↓"
        color: 1, 0, 0, 1
        font_name: "fonts/Raleway-Black.ttf"
        font_size: "10dp"
        size_hint: 1 , None
        height: "30dp"
    TextInput:
        id: textinput
        multiline: False
        size_hint: 1 , None
        height: "30dp"
    Button:
        size_hint: 1 , None
        height: "80dp"
        font_size: "13dp"
        on_press: app.on_click()
        text: "Žiūrėti orus/antnaujinti \n    (paspausti ir palaukti)"
        font_name: "fonts/Raleway-Black.ttf"


