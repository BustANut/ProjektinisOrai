BoxLayout1:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/weather12.jpeg'
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'y': 1}
        size_hint: 1, None
        height: self.minimum_height

        BoxLayout:
            orientation: "horizontal"
            Label:
                size_hint: 0.2, None
                font_size: "13dp"
                height: "30dp"
                text: "Miestas:"
                font_name: "fonts/Raleway-Black.ttf"

            TextInput:
                background_color: (0.1411,0.784,0.966,0.25) if self.focus else (0.8627,0.7176,0.9921,0.25)
                id: textinput
                multiline: False
                size_hint: 0.6 , None
                height: "30dp"
                on_text_validate: app.on_click()

            Button:
                background_color: (0.1411,0.784,0.966,0.25)
                id: button_enter
                size_hint: 0.2 , None
                height: "30dp"
                font_size: "13dp"
                on_press: app.on_click()
                text: "Ä®vesti"
                font_name: "fonts/Raleway-Black.ttf"
        Label:
            id: my_label
            text: "-"
            size_hint: 1, None
            height: "50dp"
            color: 0, 0, 0, .65
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "55dp"
        Label:
            id: temperature
            text: "-"
            size_hint: 1, None
            height: "180dp"
            color: 1, 0, 0, 1
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "80dp"
        Label:
            id: weather_type
            text: "-"
            size_hint: 1, None
            height: "35dp"
            color: 0, 0, 0, 1
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "15dp"
        Label:
            id: pressure
            text: "-"
            size_hint: 1, None
            height: "35dp"
            color: 0, 0, 0, 1
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "15dp"
        Label:
            id: humidity
            text: "-"
            size_hint: 1, None
            height: "35dp"
            color: 0, 0, 0, 1
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "15dp"
        Label:
            id: feels_like
            text: "-"
            size_hint: 1 , None
            height: "35dp"
            color: 0, 0, 0, 1
            font_name: "fonts/Raleway-Black.ttf"
            font_size: "15dp"
